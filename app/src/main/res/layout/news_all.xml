<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">
    <include
        layout="@layout/one_news_header"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_simple_img"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">
        <ImageView
            android:id="@+id/ic_favorite"
            android:layout_width="@dimen/size_ic_news"
            android:layout_height="@dimen/size_ic_news"
            android:src="@drawable/ic_favorite_border_black_24dp"
            android:layout_margin="4dp"/>
        <ImageView
            android:layout_width="@dimen/size_ic_news"
            android:layout_height="@dimen/size_ic_news"
            android:src="@drawable/ic_send"
            android:rotation="-40"
            android:layout_toRightOf="@+id/ic_favorite"
            android:layout_toEndOf="@+id/ic_favorite"
            android:layout_margin="3dp"/>
        <ImageView
            android:layout_width="@dimen/size_ic_news"
            android:layout_height="@dimen/size_ic_news"
            android:src="@drawable/ic_bookmark_border_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_margin="4dp"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9,565 likes"
            android:textColor="@color/colorBlack"
            android:textSize="11dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserName ................................................."
            android:textColor="@color/colorBlack"
            android:textSize="11dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="View all 11comments"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="9dp"
            android:text="6 HOURS AGO"/>

    </LinearLayout>

</LinearLayout>